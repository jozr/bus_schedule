<h1>Stations</h1>
<% @stations.each do |station| %>
  <p><%= link_to "#{station.name}", station_path(station) %></p>
<% end %>
<p><%= link_to "Add Station", new_station_path, :class => "btn btn-default" %></p>


<h1>Lines</h1>
<% @lines.each do |line| %>
  <p><%= link_to "#{line.name}", line_path(line) %></p>
<% end %>
<p><%= link_to "Add Line", new_line_path, :class => "btn btn-default" %></p>

<p><%= link_to "Add Stop", stops_path, :class => "btn btn-default" %></p>
